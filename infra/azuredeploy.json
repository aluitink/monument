{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "instanceName": {
      "defaultValue": "monument",
      "type": "string"
    },
    "webSku": {
      "type": "string",
      "defaultValue": "Free",
      "allowedValues": [ "Free", "Paid" ]
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GRS",
        "Standard_GZRS",
        "Standard_LRS",
        "Standard_RAGRS",
        "Standard_RAGZRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/tags",
      "name": "default",
      "apiVersion": "2021-04-01",
      "properties": {
        "tags": {
          "monument": "0.0.1"
        }
      }
    },
    {
      "name": "Storage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/monument/main/infra/storageAccount.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "storageAccountType": {
            "value": "[parameters('storageAccountType')]"
          }
        }
      }
    },
    {
      "name": "WebApp",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/aluitink/monument/main/infra/staticWebApp.json"
        },
        "parameters": {
          "instanceName": {
            "value": "[parameters('instanceName')]"
          },
          "deployApiUrl": {
            "value": "[parameters('deployApiUrl')]"
          },
          "deployApiKey": {
            "value": "[parameters('deployApiKey')]"
          },
          "webSku": {
            "value": "[parameters('webSku')]"
          },
          "storageAccountName": {
            "value": "[reference('Storage').outputs.storageAccountName.value]"
          },
          "storageConnectionString": {
            "value": "[reference('Storage').outputs.storageConnectionString.value]"
          },
          "storageEndpoints": {
            "value": "[reference('Storage').outputs.storageEndpoints.value]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'Storage')]"
      ]
    }
  ],
  "outputs": {
    "deploymentObject": {
      "type": "object",
      "value": "[deployment()]"
    }
  }
}